(func any<-script : any
 [script : string]
 (let : any
  [textblock : tb/textblock := (textblock-repl<-script script)
   repl      : repl         := (repl<-textblock textblock)]
  (any<-repl repl))
 :context
 :sideeffects "Since any code can be run. This is unsafe by nature."
 :doc "Run an arbitrary script.")


(func anylist<-repllist : anylist
 [repllist : repllist]
 (list<-list : anylist
  repllist
  (fn : any
   [repl : repl]
   (any<-repl repl)))
 :context
 :doc "Run an arbitrary program in the REPL.")

(func macro : any-1
 [anylist : anylist :...]
 (let : any-1
  [textlist : stringlist   := (list<-list
                               anylist
                               (fn [item : any]
                                (string<-any item)))
   script   : string       := (type/string<-stringlist-join
                               textlist
                               "")
   tb       : tb/textblock := (textblock-repl<-script
                               script)
   repl     : repl         := (repl<-textblock tb)]
  (any<-any : any-1
   (any<-repl repl)))
 :context
 :doc "A function that joins any number of values into a string and then parses and evaluates it.")

(func repl<-liblist-string : repl
 [liblist : liblist
  text    : string :doc "Program to run"]
 :doc "Returns a repl from the given text.")

(func repl<-textblock : repl
 [textblock : tb/textblock]
 :doc "Returns a parsed repl from a parsed textblock")

(func textblock-repl<-script : tb/textblock
 [script : string]
 (tb/textblock-parse<-string-delim
  script
  delimvxlisp)
 :test (test
        (tb/textblock
         :text "(+ 2 3)"
         :startpos 1
         :endpos 7
         :children
          (tb/textblocklist
           (tb/textblock
            :text "(+ 2 3)"
            :startpos 1
            :endpos 7
            :delim
             (copy delimvxlispparen
              :delimlist
               (empty delimlist))
            :children
             (tb/textblocklist
              (tb/textblock
               :text "+"
               :startpos 2
               :endpos 2)
              (tb/textblock
               :text " "
               :startpos 3
               :endpos 3
               :delim
                (copy tb/delimwhitespace
                 :pos 0))
              (tb/textblock
               :text "2"
               :startpos 4
               :endpos 4)
              (tb/textblock
               :text " "
               :startpos 5
               :endpos 5
               :delim
                (copy tb/delimwhitespace
                 :pos 0))
              (tb/textblock
               :text "3"
               :startpos 6
               :endpos 6)))))
        (textblock-repl<-script
         "(+ 2 3)"))
 :doc "Returns a parsed textblock from a string")
